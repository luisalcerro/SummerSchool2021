<?xml version="1.0"?>

<jetscape>
  
  <nEvents> 3000 </nEvents>
  
  <outputFilename>test_out</outputFilename>
  <JetScapeWriterHepMC> on </JetScapeWriterHepMC>
  <JetScapeWriterAscii> off </JetScapeWriterAscii>
  <JetScapeWriterFinalStateHadronsAscii> on </JetScapeWriterFinalStateHadronsAscii> 
  <JetScapeWriterFinalStatePartonsAscii> on </JetScapeWriterFinalStatePartonsAscii>
  <!-- Hard Process -->
  <Hard>
    <PythiaGun>
      <pTHatMin>10</pTHatMin>
      <pTHatMax>2510</pTHatMax>
      <eCM>5020</eCM>
      <FSR_on>1</FSR_on>
      <LinesToRead>
	HardQCD:all = off
	PromptPhoton:all = off
	Top:gg2ttbar = on
	Top:qqbar2ttbar = on
	24:onMode = off
	24:onPosIfAny =  13
	24:onNegIfAny = 1 2 3 4 5
	6:m0 = 172.5
	Tune:preferLHAPDF = 2
	Tune:pp 14
	Tune:ee 7
	MultipartonInteractions:pT0Ref=2.4024
	MultipartonInteractions:ecmPow=0.25208
	ParticleDecays:allowPhotonRadiation = on
      </LinesToRead>
    </PythiaGun>
  </Hard>
  
  <!--Eloss Modules -->
  <Eloss>
    <formTime> 0.1 </formTime> <!-- Positive value for pythia showers  -->
    <Matter>
      <in_vac> 1 </in_vac>
      <matter_on> 0 </matter_on>
      <qhat0> 0.0 </qhat0>
    </Matter>
  </Eloss>
  
  <!-- Jet Hadronization Module -->
  <JetHadronization>
    <name>colorless</name>
    <eCMforHadronization>2510</eCMforHadronization>
    <weak_decays>off</weak_decays>  <!-- testing to ensure b-jets identification -->
  </JetHadronization>
  
</jetscape>
